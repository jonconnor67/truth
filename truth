<figure class="wp-block-image size-large"><img src="https://i1.wp.com/stocktrades.exchange/wp-content/uploads/2020/02/bandicam-2020-02-05-14-18-50-231.jpg?fit=1024%2C349&amp;ssl=1" alt="" class="wp-image-33942"/></figure>
<!-- /wp:image -->

<!-- wp:separator -->
<hr class="wp-block-separator"/>
<!-- /wp:separator -->

<!-- wp:separator -->
<hr class="wp-block-separator"/>
<!-- /wp:separator -->

<!-- wp:paragraph {"align":"center"} -->
<p class="has-text-align-center">Dole Food Co Inc – ‘IPO’ on 10/26/09</p>
<!-- /wp:paragraph -->

<!-- wp:separator -->
<hr class="wp-block-separator"/>
<!-- /wp:separator -->

<!-- wp:separator -->
<hr class="wp-block-separator"/>
<!-- /wp:separator -->

<!-- wp:separator -->
<hr class="wp-block-separator"/>
<!-- /wp:separator -->

<!-- wp:separator -->
<hr class="wp-block-separator"/>
<!-- /wp:separator -->

<!-- wp:image {"align":"center","id":33971,"width":269,"height":385,"sizeSlug":"large"} -->
